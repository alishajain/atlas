const express = require('express');
const cors = require('cors');
const bodyParser = require('body-parser');
const path = require('path');
const tableRoutes = require('./routes/tableRoutes.js');
const errorHandler = require('./middleware/errorHandler');

const app = express();
const PORT = 5000;

// CORS configuration (allow requests from your frontend)
const corsOptions = {
  origin: 'http://147.93.28.229',  // Your frontend URL
  methods: ['GET', 'POST', 'PUT', 'DELETE'],
  allowedHeaders: ['Content-Type'],
};

app.use(cors(corsOptions));  // Enable CORS
app.use(bodyParser.json());  // Body parser middleware

// Serve static files from the 'uploads' folder
app.use('/uploads', express.static(path.join(__dirname, 'uploads')));

// Use the routes for table-related APIs
app.use('/atlas/api', tableRoutes);

// Global error handler
app.use(errorHandler);

// Basic route for home or health-check
app.get('/atlas', (req, res) => {
  res.send('Welcome to the Express API!');
});

// Start the server
app.listen(PORT, () => {
  console.log(`Server is running on port ${PORT}`);
});
